<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddPI">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="116dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="11dp"
        android:gravity="center"
        android:text="Introduza os seguintes dados para adicionar um Ponto de interesse:"
        android:textSize="25sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/EditTextNome"
        style="@style/EditTextStyle"
        android:layout_width="363dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="21dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="27dp"
        android:hint="Nome" />

    <EditText
        android:id="@+id/EditTextCoordx"
        style="@style/EditTextStyle"
        android:layout_width="363dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/EditTextNome"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="21dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="27dp"
        android:hint="Coordenada x" />
    <EditText
        android:id="@+id/EditTextCoordy"
        style="@style/EditTextStyle"
        android:layout_width="363dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/EditTextCoordx"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="21dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="27dp"
        android:hint="Coordenada y" />

    <Button
        android:id="@+id/buttonconfirmar"
        android:layout_width="124dp"
        android:layout_height="60dp"
        android:layout_below="@+id/EditTextCoordy"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="140dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="145dp"
        android:text="Confirmar" />

</RelativeLayout>