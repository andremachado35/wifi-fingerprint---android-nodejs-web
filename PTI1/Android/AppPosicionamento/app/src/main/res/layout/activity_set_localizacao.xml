<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.andre.aplicacaoposicionamento.SetLocalizacao">

    <com.example.andre.aplicacaoposicionamento.PinView
        android:id="@+id/imageViewSetLocal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp" />
    <TextView
        android:id="@+id/textViewlarguratext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="26dp"
        android:layout_marginTop="20dp"
        android:text="O x atual da sua localização:" />

    <TextView
        android:id="@+id/textViewlargurashow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewlarguratext"
        android:layout_alignParentStart="true"
        android:layout_marginStart="71dp"
        android:layout_marginTop="19dp"
        android:text="x" />

    <TextView
        android:id="@+id/textViewcomprimentotext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewlargurashow"
        android:layout_alignParentStart="true"
        android:layout_marginStart="26dp"

        android:layout_marginTop="6dp"
        android:text="O y atual da sua localização" />

    <TextView
        android:id="@+id/textViewcomprimentoshow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewcomprimentotext"
        android:layout_alignParentStart="true"
        android:layout_marginStart="74dp"

        android:layout_marginTop="17dp"
        android:text="y" />

    <Button
        android:id="@+id/buttonPressLocation"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/textViewcomprimentoshow"
        android:layout_alignStart="@+id/buttonset"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="-32dp"
        android:layout_marginTop="17dp"
        android:layout_weight="1"
        android:text="Selecionar no espaço"
        android:textSize="12dp" />
    <TextView
        android:id="@+id/textViewnewlarguratext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonPressLocation"
        android:layout_alignParentStart="true"
        android:layout_marginStart="26dp"
        android:layout_marginTop="31dp"
        android:text="Introduza y da sua localização:" />

    <EditText
        android:id="@+id/editTextnewlargura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewnewlarguratext"
        android:layout_alignParentStart="true"
        android:layout_marginStart="81dp"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:hint="Largura"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextnewlargura"
        android:layout_alignStart="@+id/textViewnewlarguratext"
        android:layout_marginStart="0dp"
        android:layout_marginTop="14dp"
        android:text="Introduza o novo x da sua localização:" />

    <EditText
        android:id="@+id/editTextcomprimentonew"
        android:layout_alignStart="@+id/editTextnewlargura"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginStart="0dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Comprimento" />

    <Button
        android:id="@+id/buttonset"
        android:layout_width="150dp"
        android:layout_height="90dp"
        android:layout_below="@+id/editTextcomprimentonew"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp"
        android:layout_marginBottom="45dp"
        android:text="Confirmar" />

</RelativeLayout>
